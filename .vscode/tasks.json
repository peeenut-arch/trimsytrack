{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Android app (Gradle)",
			"type": "shell",
			"command": "./gradlew assembleDebug",
			"isBackground": false,
			"problemMatcher": [
				"$javac"
			],
			"group": "build"
		},
		{
			"label": "Install app on device (Gradle)",
			"type": "shell",
			"command": "./gradlew installDebug",
			"isBackground": false,
			"problemMatcher": [
				"$javac"
			],
			"group": "build"
		},
		{
			"label": "Build + Install + Launch (device)",
			"type": "shell",
			"command": "./gradlew installDebug; ${env:LOCALAPPDATA}/Android/Sdk/platform-tools/adb.exe shell am start -n com.trimsytrack/.ui.MainActivity",
			"isBackground": false,
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}